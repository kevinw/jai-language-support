{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Jai",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.jai",
				"match": "\\b(if|while|for|return|break|continue)\\b"
			},
			{
				"name": "storage.type.jai",
				"match": "\\b(int|u8|u16|s8|s16|bool|string|struct)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.jai",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.jai",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.jai"
}