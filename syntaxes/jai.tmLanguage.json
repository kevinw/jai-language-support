{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Jai",
	"patterns": [
		{ "include": "#block-comments" },
		{ "include": "#comments" },
		{ "include": "#keywords" },
		{ "include": "#strings" }
	],
	"repository": {
		"block-comments": {
			"name": "comment.block.jai",
			"begin": "\\/\\*",
			"end": "\\*\\/"
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.jai",
					"match": "(//.*)"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.jai",
				"match": "\\b(if|else|while|for|return|break|continue)\\b"
			},
			{
				"name": "storage.type.jai",
				"match": "\\b(int|u8|u16|u32|u64|s8|s16|s32|s64|float|float32|float64|bool|string|struct)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.jai",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.jai",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.jai"
}